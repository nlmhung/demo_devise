<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Action</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td><%= link_to 'Show', admin_genre_path(genre) %></td>
            <td><%= link_to 'Edit', edit_admin_genre_path(genre) %></td>
            <td><%= link_to 'Destroy', admin_genre_path(genre), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

